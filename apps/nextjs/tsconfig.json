{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/locales/client.ts",
    "../../packages/locales/provider.tsx",
    "../../packages/locales/server.ts",
  ],
  "exclude": ["node_modules"],
}
